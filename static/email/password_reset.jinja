{% extends "base.jinja" %}

{% block content %}
  <tr>
    <td align="center" style="padding:24px 20px 0 20px;">
      <p style="margin:0; font-size:14px;">
        Hi <strong>{{ full_name }}</strong>
      </p>
      <p style="margin:6px 0 0 0; font-size:14px;">
        It seems that you have requested a password reset for your account for Ayon.
      </p>
      <p style="margin:6px 0 0 0; font-size:14px;">
        Please click the button below to reset your password.
      </p>
    </td>
  </tr>

  <!-- Button -->
  <tr>
    <td align="center" style="padding:20px;">
      <a
        href="{{ reset_url }}"
        clicktracking="off"
        style="
          background-color:#16d4a7;
          color:#000000;
          font-weight:bold;
          font-size:14px;
          text-decoration:none;
          padding:12px 24px;
          border-radius:4px;
          display:inline-block;
        "
        >Reset password</a>
    </td>
  </tr>
{% endblock %}

{% block footer %}
  <tr>
    <td
      align="center"
      style="padding:30px 20px 20px 20px; border-top:1px solid #eeeeee;"
    >
      <img
        src="https://static.ynput.team/AYON_blackG_dot.png"
        alt="AYON Logo"
        style="width:85px; margin-bottom:10px;"
      />
      <p style="margin:10px 0 0 0; font-size:12px; color:#777;">
        If you did not request a password reset, please ignore this email.
      </p>
    </td>
  </tr>
{% endblock %}

